# MongoDB Atlas Connection String
# Get this from: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jewelry_dashboard?retryWrites=true&w=majority

# Server Configuration
PORT=65528
NODE_ENV=development

# Optional: Enable/Disable MongoDB (for testing)
USE_MONGODB=true

# Authentication Settings
# Set USE_AUTH=false to disable authentication (for development only)
USE_AUTH=true

# Admin Credentials
# Username for login
ADMIN_USERNAME=admin

# Password hash - Generate using: node generate-password.js YOUR_PASSWORD
# Example hash below is for password: "admin123" (CHANGE THIS!)
ADMIN_PASSWORD_HASH=240be518fabd2724ddb6f04eeb1da5967448d7e831c08c8fa822809f74c720a9

# Session Token - Generate a random string (32+ characters recommended)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
AUTH_TOKEN=your-secret-token-here-change-this-to-random-string
